        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".MarketActivity" />

        <activity android:name=".THDetail.SensorListActivity" />
        <activity android:name=".THDetail.SensorHourListActivity" />
        <activity android:name=".THDetail.SensorMinuteListActivity" />
        
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="adjustResize" />
